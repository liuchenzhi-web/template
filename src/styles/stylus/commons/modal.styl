.cs-modal{
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    background: rgba(0,0,0,.2);
    z-index: 1000;
    overflow: auto;//内容超过屏幕 即出滚动条
    display: none;
    .cs-dialog{
        font-family: "microsoft yahei", "宋体";
        width: 600px;
        margin: 0 auto;
        background-color: #fff;
        box-shadow: 0 3px 9px rgba(0,0,0,.5)
        border-radius: 5px
        position: relative;
        .cs-dialog-top{
            background: rgb(64,62,122); //#30A9DE
            .cs-dialog-title{
                color: #fff;
                margin: 0;
                padding: 10px 20px 10px 20px;
                font-size: 20px
            }
            .cs-dialog-close{
                font-size: 35px;
                position: absolute;
                right: 3px;
                top: 3px;
                cursor: pointer;
                color: #fff;
                line-height: 20px;
            }
        }
        .cs-dialog-content{
            padding: 10px 20px 10px 20px
        }
        .cs-dialog-confirm{
            padding: 0 6px 6px;
            overflow: hidden;
            text-align: right
            .cs-dialog-cancel,.cs-dialog-sure{
                display: inline-block;
                width: 60px;
                height: 30px;
                text-align: center;
                line-height: 30px;
                font-size: 14px;
                cursor: pointer;
            }
            .cs-dialog-cancel{
                border: 1px solid #ccc;
                background-color: #fff;
            }
            .cs-dialog-sure{
                background: rgb(64,62,122);
                color: #fff;
            }
        }
    }
}

